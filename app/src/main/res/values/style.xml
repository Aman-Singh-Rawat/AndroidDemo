<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="splashText" parent="CardView.Light">
        <item name="android:textSize">34sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="textTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="headText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="smallText" parent="CardView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="lineSpacing">5dp</item>
    </style>

    <style name="singleBoldText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="greyBoldText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="greenColorText" parent="CardView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="blueText" parent="CardView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <!--        style for layout_home_page_recycler-->
    <style name="mediumText" parent="CardView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/poppins_semibold</item>

    </style>

    <style name="verySmallText" parent="CardView">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="smallTextTwo" parent="CardView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="mediumTextBlack" parent="greenColorText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue</item>
    </style>

    <style name="titleText" parent="textTheme">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="headingText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>
</resources>