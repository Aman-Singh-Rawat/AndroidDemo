<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="splashText" parent="CardView.Light">
        <item name="android:textSize">34sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="textTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>
    <style name="headText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="smallText" parent="CardView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="lineSpacing">5dp</item>
    </style>
    <style name="singleBoldText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="greyBoldText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>
    <style name="greenColorText" parent="CardView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>