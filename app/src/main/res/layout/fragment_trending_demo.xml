<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.screen.onboading.TrendingDemo"
    android:orientation="vertical"
    android:background="@color/dark_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:background="@color/dark_white">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgTrendingDemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_trending_demo"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStayInformed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Stay Informed, Anytime, Anywhere"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:fontFamily="@font/roboto"
                android:lineSpacingExtra="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgTrendingDemo"
                android:layout_marginTop="25dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvWelcomeToOur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Welcome to our news app, your go-to source for breaking news, exclusive "
                android:textSize="14sp"
                android:textColor="@color/grey"
                app:fontFamily="@font/roboto_light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvStayInformed"
                android:lineSpacingExtra="5dp"/>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvWelcomeToOur"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:id="@+id/linearLayout">

                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:background="@color/green"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginStart="5dp"/>

                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTrendingSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textAllCaps="false"
            android:backgroundTint="#F0FBFA"
            android:background="@drawable/bg_btn_continue"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textColor="@color/green"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTrendingContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_continue"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"/>


    </LinearLayout>


</LinearLayout>