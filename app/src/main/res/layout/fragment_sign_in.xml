<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.screen.auth.SignInFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glSignStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glSignEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_back_arrow"
                app:layout_constraintStart_toStartOf="@id/glSignStart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvWelcomeBack"
                style="@style/headText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Welcome Back"
                app:layout_constraintStart_toStartOf="@id/glSignStart"
                app:layout_constraintTop_toBottomOf="@id/ivArrow" />

            <TextView
                android:id="@+id/tvWelcomeDetail"
                style="@style/smallText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Please enter your email and password to sign in."
                app:layout_constraintEnd_toEndOf="@id/glSignEnd"
                app:layout_constraintStart_toStartOf="@id/glSignStart"
                app:layout_constraintTop_toBottomOf="@id/tvWelcomeBack" />

            <TextView
                android:id="@+id/tvEmailSignIn"
                style="@style/singleBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Email"
                app:layout_constraintStart_toStartOf="@id/glSignStart"
                app:layout_constraintTop_toBottomOf="@id/tvWelcomeDetail" />

            <EditText
                android:id="@+id/etEmailSignIn"
                style="@style/singleBoldText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:maxLength="30"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintEnd_toEndOf="@id/glSignEnd"
                app:layout_constraintStart_toStartOf="@id/glSignStart"
                app:layout_constraintTop_toBottomOf="@id/tvEmailSignIn" />

            <TextView
                android:id="@+id/tvPasswordSignIn"
                style="@style/singleBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Password"
                app:layout_constraintStart_toStartOf="@id/glSignStart"
                app:layout_constraintTop_toBottomOf="@id/etEmailSignIn" />

            <EditText
                android:id="@+id/etPassWordSignIn"
                style="@style/singleBoldText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:hint="PassWord"
                android:maxLength="30"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                app:layout_constraintEnd_toEndOf="@id/glSignEnd"
                app:layout_constraintStart_toStartOf="@id/glSignStart"
                app:layout_constraintTop_toBottomOf="@id/tvPasswordSignIn" />

            <CheckBox
                android:id="@+id/cbRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etPassWordSignIn" />

            <TextView
                android:id="@+id/tvRememberMe"
                style="@style/singleBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                app:layout_constraintBottom_toBottomOf="@id/cbRemember"
                app:layout_constraintStart_toEndOf="@+id/cbRemember"
                app:layout_constraintTop_toTopOf="@id/cbRemember" />

            <TextView
                android:id="@+id/tvForgetPass"
                style="@style/greenColorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forget password?"
                app:layout_constraintBottom_toBottomOf="@id/tvRememberMe"
                app:layout_constraintEnd_toEndOf="@id/glSignEnd"
                app:layout_constraintTop_toTopOf="@id/tvRememberMe" />

            <View
                android:id="@+id/vDividerSign"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/grey"
                app:layout_constraintEnd_toEndOf="@id/glSignEnd"
                app:layout_constraintStart_toStartOf="@id/glSignStart"
                app:layout_constraintTop_toBottomOf="@id/cbRemember" />

            <TextView
                android:id="@+id/tvDonotAccount"
                style="@style/singleBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Don't have an account?"
                app:layout_constraintEnd_toEndOf="@id/glSignEnd"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@id/glSignStart"
                app:layout_constraintTop_toBottomOf="@id/vDividerSign" />

            <TextView
                style="@style/greenColorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="SignUp"
                app:layout_constraintBottom_toBottomOf="@+id/tvDonotAccount"
                app:layout_constraintStart_toEndOf="@+id/tvDonotAccount"
                app:layout_constraintTop_toTopOf="@+id/tvDonotAccount" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_button"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/glSignEnd"
                app:layout_constraintStart_toStartOf="@id/glSignStart" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>