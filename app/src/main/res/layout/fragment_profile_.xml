<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/clBottom"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glProfileStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glProfileEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <ImageView
                android:id="@+id/ivBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_back_arrow"
                app:layout_constraintStart_toStartOf="@id/glProfileStart"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="200dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_button"
                app:layout_constraintEnd_toEndOf="@id/glProfileEnd"
                app:layout_constraintStart_toEndOf="@+id/ivBackArrow"
                app:layout_constraintTop_toTopOf="@id/ivBackArrow" />

            <TextView
                android:id="@+id/tvCreateProfile"
                style="@style/headText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/txt_create_pub"
                app:layout_constraintStart_toStartOf="@id/glProfileStart"
                app:layout_constraintTop_toBottomOf="@id/ivBackArrow" />

            <TextView
                android:id="@+id/tvNewsExperience"
                style="@style/smallText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/txt_this_profile"
                app:layout_constraintEnd_toEndOf="@id/glProfileEnd"
                app:layout_constraintStart_toStartOf="@id/glProfileStart"
                app:layout_constraintTop_toBottomOf="@+id/tvCreateProfile" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_back"
                app:layout_constraintEnd_toEndOf="@id/glProfileEnd"
                app:layout_constraintStart_toStartOf="@id/glProfileStart"
                app:layout_constraintTop_toBottomOf="@id/tvNewsExperience" />

            <TextView
                android:id="@+id/tvFullName"
                style="@style/singleBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Full Name"
                app:layout_constraintStart_toStartOf="@id/glProfileStart"
                app:layout_constraintTop_toBottomOf="@id/ivProfile" />

            <TextView
                android:id="@+id/tvName"
                style="@style/singleBoldText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Andrew Ainsley"
                app:layout_constraintEnd_toEndOf="@id/glProfileEnd"
                app:layout_constraintStart_toStartOf="@id/glProfileStart"
                app:layout_constraintTop_toBottomOf="@id/tvFullName" />

            <TextView
                android:id="@+id/tvUsername"
                style="@style/singleBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Username"
                app:layout_constraintStart_toStartOf="@id/glProfileStart"
                app:layout_constraintTop_toBottomOf="@id/tvName" />

            <TextView
                android:id="@+id/tvUserId"
                style="@style/singleBoldText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="andrew_ainsley"
                app:layout_constraintEnd_toEndOf="@id/glProfileEnd"
                app:layout_constraintStart_toStartOf="@id/glProfileStart"
                app:layout_constraintTop_toBottomOf="@id/tvUsername" />

            <TextView
                android:id="@+id/tvBio"
                style="@style/singleBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Bio"
                app:layout_constraintStart_toStartOf="@id/glProfileStart"
                app:layout_constraintTop_toBottomOf="@id/tvUserId" />

            <TextView
                android:id="@+id/tvBioDetail"
                style="@style/singleBoldText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rectangle"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Tech enthusiast, likes to share stories a..."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/glProfileEnd"
                app:layout_constraintStart_toStartOf="@id/glProfileStart"
                app:layout_constraintTop_toBottomOf="@id/tvBio" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glProfileChildStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glProfileChildEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button"
            android:text="Finish"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/glProfileChildEnd"
            app:layout_constraintStart_toStartOf="@id/glProfileChildStart" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>