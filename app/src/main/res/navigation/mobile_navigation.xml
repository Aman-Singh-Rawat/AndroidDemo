<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.newsapp.ui.home.homepage.HomePageFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home_page" >
    </fragment>

    <fragment
        android:id="@+id/navigation_CreateStory"
        android:name="com.newsapp.presenter.screen.profile.CreateStoryFragment"
        android:label="navigation_CreateStory"
        tools:layout="@layout/fragment_create_story" >


    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.newsapp.ui.notifications.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/previewStoryFragment"
        android:name="com.newsapp.presenter.screen.Profile.PreviewStoryFragment"
        android:label="fragment_preview_story"
        tools:layout="@layout/fragment_preview_story" >

    </fragment>

    <fragment
        android:id="@+id/fragmentPublish"
        android:name="com.newsapp.presenter.screen.profile.publish.PublishFragment"
        android:label="fragment_publish"
        tools:layout="@layout/fragment_publish">
    </fragment>

    <fragment
        android:id="@+id/fragmentStoryPublished"
        android:name="com.newsapp.presenter.screen.profile.StoryPublishedFragment"
        tools:layout="@layout/fragment_story_published"
        android:label="story_publish_fragment"/>

    <fragment
        android:id="@+id/trendingFragment"
        android:name="com.newsapp.ui.home.Trending.TrendingFragment"
        android:label="fragment_trending"
        tools:layout="@layout/fragment_trending" />
    <fragment
        android:id="@+id/recentStoriesFragment"
        android:name="com.newsapp.ui.home.RecentStories.RecentStoriesFragment"
        android:label="fragment_recent_stories"
        tools:layout="@layout/fragment_recent_stories" />
    <fragment
        android:id="@+id/navigation_bookmark"
        android:name="com.newsapp.ui.dashboard.BookMarkFragment"
        android:label="fragment_bookmark"
        tools:layout="@layout/fragment_bookmark" />
</navigation>